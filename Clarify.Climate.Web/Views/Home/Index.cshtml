@model TopClimateModel
@{
    ViewBag.Title = "Index";
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <h1 class="text-center">Clima Tempo - Simples</h1>
        <div class="row">
            <div class="col-sm-5">
                <div class="row breadcrumb">
                    <p>Cidades mais quente hoje</p>
                </div>
                @foreach (var item in Model.Top3Max)
                {
                    <div class="row">
                        <div class="col-sm-6 text-left"><p>@item.Cidade.Nome/@item.Cidade.Estado.UF</p></div>
                        <div class="col-sm-6 text-right"><p>@item.TemperaturaMaxima</p></div>
                    </div>
                }
            </div>
            <div class="col-md-2"></div>
            <div class="col-sm-5">
                <div class="row breadcrumb">
                    <p>Cidades mais frias hoje</p>
                </div>
                @foreach (var item in Model.Top3Min)
                {
                    <div class="row">
                        <div class="col-sm-6 text-left"><p>@item.Cidade.Nome/@item.Cidade.Estado.UF</p></div>
                        <div class="col-sm-6 text-right"><p>@item.TemperaturaMaxima</p></div>
                    </div>
                }
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group">
                @Html.DropDownList("ddlCidade", (SelectList)ViewBag.City, "Selecione a cidade para pesquisar", new { @class = "form-control", id = "ddlCidade" })
            </div>
        </div>
        <div id="message" class="row" style="display:none">
            <h4></h4>
        </div>
        <div class="row" id="resultSearch">

        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/pages")
</body>
</html>
